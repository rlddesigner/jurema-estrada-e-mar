---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  estilo?: string;
  folhas?: boolean;
}

const {
  title,
  description = "Espaço de luz, orações, pontos cantados e ensinamentos guiados por fé e axé.",
  estilo,
  folhas
} = Astro.props;
---

<BaseLayout title={title} estilo={estilo} folhas={folhas}>
  <slot />
</BaseLayout>
