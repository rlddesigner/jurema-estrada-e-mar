---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  estilo?: string;
  folhas?: boolean;
}

const { title, estilo = "", folhas = false } = Astro.props;
---

<html lang="pt-BR">
  <head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4TYJVW4TDL"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-4TYJVW4TDL');
</script>
    <meta charset="UTF-8" />
    <title>{title} | Jurema, Estrada e Mar</title>

    <link rel="stylesheet" href="/style.css" />
    {estilo === 'bg-oxum' && <link rel="stylesheet" href="/styles/oracoes/oracao-oxum.css" />}
    {estilo === 'bg-iansa' && <link rel="stylesheet" href="/styles/oracoes/oracao-iansa.css" />}
    {estilo === 'bg-xango' && <link rel="stylesheet" href="/styles/oracoes/oracao-xango.css" />}
    {estilo === 'bg-oxala' && <link rel="stylesheet" href="/styles/oracoes/oracao-oxala.css" />}
    {estilo === 'bg-iemanja' && <link rel="stylesheet" href="/styles/oracoes/oracao-iemanja.css" />}
    {estilo === 'bg-ogum' && <link rel="stylesheet" href="/styles/oracoes/oracao-ogum.css" />}
    {estilo === 'bg-xango' && <link rel="stylesheet" href="/styles/oracoes/oracao-xango.css" />}
    {estilo === 'bg-iansa' && <link rel="stylesheet" href="/styles/oracoes/oracao-iansa.css" />}
    {estilo === 'bg-omolu' && <link rel="stylesheet" href="/styles/oracoes/oracao-omolu.css" />}
    {estilo === 'bg-nana' && <link rel="stylesheet" href="/styles/oracoes/oracao-nana.css" />}
    {estilo === 'bg-oxossi' && <link rel="stylesheet" href="/styles/oracoes/oracao-oxossi.css" />}
    {estilo === 'bg-ere' && <link rel="stylesheet" href="/styles/oracoes/oracao-ere.css" />}
    {estilo === 'bg-exu' && <link rel="stylesheet" href="/styles/oracoes/oracao-exu.css" />}
    {estilo === 'bg-pombogira' && <link rel="stylesheet" href="/styles/oracoes/oracao-pombogira.css" />}
    {estilo === 'bg-ponto' && <link rel="stylesheet" href="/styles/ponto.css" />}

    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Open+Sans&display=swap" rel="stylesheet" />

  <body class={`pagina-oracao ${estilo}`}>
    <Header />

    <main class="conteudo-principal">
      <slot />
    </main>

    <Footer />

    {folhas && (
      <>
        <div class="folhas-caindo" aria-hidden="true">
          <img src="/imagens/folha1.png" class="folha folha1" />
          <img src="/imagens/folha2.png" class="folha folha2" />
          <img src="/imagens/folha3.png" class="folha folha3" />
        </div>
        <script type="module" src="/folhas.js"></script>
      </>
    )}
  </body>
</html>
