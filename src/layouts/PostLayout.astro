---
export interface Props {
  title: string;
  image?: string;
  estilo?: string; // pra personalizar classe do <main>
}
const { title, image, estilo = "" } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Jurema, Estrada e Mar</title>
    <link rel="stylesheet" href="/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Open+Sans&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="cabecalho">
      <img src="/imagens/logo.png" alt="Logo Jurema, Estrada e Mar" class="logo" />
      <nav>
        <a href="/">Início</a>
        <a href="/oracoes">Orações</a>
        <a href="/pontos">Pontos Cantados</a>
        <a href="/ensinamentos">Ensinamentos</a>
        <a href="/sobre">Sobre</a>
      </nav>
    </header>

    <main class={`pagina-oracao ${estilo}`}>
      {image && <img src={image} alt={title} class="capa-oracao" />}
      <h1>{title}</h1>
      <slot />
    </main>

   <footer class="rodape">
  <div class="rodape-interno">
    <p>Com axé e acolhimento, por <strong>Jurema, Estrada e Mar</strong></p>
    <p>Feito com amor e guiança espiritual ✨</p>
  </div>
</footer>

<div class="folhas-caindo" aria-hidden="true">
  <img src="/imagens/folha1.png" class="folha folha1" />
  <img src="/imagens/folha2.png" class="folha folha2" />
  <img src="/imagens/folha3.png" class="folha folha3" />
  <img src="/imagens/folha1.png" class="folha folha4" />
  <img src="/imagens/folha2.png" class="folha folha5" />
  <img src="/imagens/folha3.png" class="folha folha6" />
</div>


  </body>
</html>
