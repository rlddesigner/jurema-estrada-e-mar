---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const todosPontos = await getCollection('pontos');
const pontosFiltrados = todosPontos.filter(
  (p) => p.data.classe === 'ponto de demanda'
);
---

<Layout title="Pontos de Demanda" description="Cantos de proteção, quebra de demandas e firmeza espiritual.">
  <main class="pagina-ponto">
    <h1>🕯️ Pontos de Demanda</h1>
    <p class="descricao-classe">Pontos usados para proteção, quebra de demandas e movimentação de energia no terreiro.</p>

    <div class="grade-pontos">
      {pontosFiltrados.map(({ data }) => (
        <a href={`/pontos/${data.slug}`} class="card-ponto">
          <h3>{data.title}</h3>
        </a>
      ))}
    </div>
  </main>
</Layout>
