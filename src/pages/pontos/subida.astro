---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const todosPontos = await getCollection('pontos');
const pontosFiltrados = todosPontos.filter(
  (p) => p.data.classe === 'ponto de subida'
);
---

<Layout title="Pontos de Subida" description="Cantos para despedida e encaminhamento das entidades após os trabalhos espirituais.">
  <main class="pagina-ponto">
    <h1>✨ Pontos de Subida</h1>
    <p class="descricao-classe">Pontos cantados para despedir as entidades com respeito, luz e encaminhamento após a gira.</p>

    <div class="grade-pontos">
      {pontosFiltrados.map(({ data }) => (
        <a href={`/pontos/${data.slug}`} class="card-ponto">
          <h3>{data.title}</h3>
        </a>
      ))}
    </div>
  </main>
</Layout>
