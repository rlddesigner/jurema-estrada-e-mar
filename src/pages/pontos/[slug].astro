---
import { getEntryBySlug, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Seo from '../../components/Seo.astro';

// Gera as rotas dinÃ¢micas para cada ponto
export async function getStaticPaths() {
  const pontos = await getCollection('pontos'); // âœ… Plural
  return pontos.map((ponto) => ({
    params: { slug: ponto.slug },
    props: { ponto } // âœ… Prop se chama ponto
  }));
}

// Pega o ponto atual
const { ponto } = Astro.props; // âœ… Pegando ponto
const { Content } = await ponto.render();
const { title, description, image, seo } = ponto.data;

// SEO
const seoTitle = seo?.title || title;
const seoDescription = seo?.description || description;
const url = `https://juremaestradaemar.netlify.app/pontos/${ponto.slug}`;

// Pega todos os pontos para listar os Ãºltimos
const todosPontos = await getCollection('pontos'); // âœ… Plural

const ultimosPontos = todosPontos
  .filter((p) => p.slug !== ponto.slug)
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 3);
---
<Layout title={title} description={description}>
  <head>
    <Seo title={seoTitle} description={seoDescription} url={url} image={image} />
  </head>

  <main class="pagina-ponto">
    <h1>{title}</h1>

    {image && <img src={image} alt={title} class="capa-ponto" />}

    <article class="conteudo-ponto">
      <Content />
    </article>

    {ultimosPontos.length > 0 && (
      <section class="ultimos-pontos">
        <h2>ðŸŽ¶ Ãšltimos Pontos Cantados</h2>
        <div class="grade-pontos">
          {ultimosPontos.map(({ data }) => (
            <a href={`/pontos/${data.slug}`} class="card-ponto">
              {data.image && <img src={data.image} alt={data.title} />}
              <h3>{data.title}</h3>
            </a>
          ))}
        </div>
      </section>
    )}
  </main>
</Layout>
