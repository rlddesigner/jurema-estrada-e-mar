---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const todosPontos = await getCollection('pontos');
const pontosFiltrados = todosPontos.filter(
  (p) => p.data.classe === 'ponto de saudação'
);
---

<Layout title="Pontos de Saudação" description="Cantos sagrados de saudação na Umbanda">
  <main class="pagina-ponto">
    <h1>🎵 Pontos de Saudação</h1>
    <p class="descricao-classe">Cantos usados para saudar entidades e abrir os trabalhos espirituais com reverência e axé.</p>

    <div class="grade-pontos">
      {pontosFiltrados.map(({ data }) => (
        <a href={`/pontos/${data.slug}`} class="card-ponto">
          <h3>{data.title}</h3>
        </a>
      ))}
    </div>
  </main>
</Layout>
